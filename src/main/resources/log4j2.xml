<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>
<Configuration>
	<Properties>
		<Property name="log-path">/home/template/logs</Property>
	</Properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight{${LOG_LEVEL_PATTERN:-%5p}}{FATAL=red, ERROR=red, WARN=yellow, INFO=green, DEBUG=green, TRACE=green} %style{${sys:PID}}{magenta} --- %X{MDCTest} [%15.15t] %style{%-40.40c{1.}}{cyan} : %m%n%ex "
				disableAnsi="false" />
		</Console>

		<RollingFile name="RollingFile"
			fileName="${log-path}/template.log"
			filePattern="${log-path}/$${date:yyyy-MM}/template-%d{-dd-MMMM-yyyy}-%i.log.gz">
			<PatternLayout>
				<pattern>%d %p [%t] %X{MDCTest} %C{1.} %m%n</pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
				<TimeBasedTriggeringPolicy />
			</Policies>
		</RollingFile>
	</Appenders>

	<Loggers>
		<!-- LOG everything at INFO level -->
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFile" />
		</Root>
		<Logger name="com.fss.hystriximpl" level="trace"></Logger>
	</Loggers>

</Configuration>